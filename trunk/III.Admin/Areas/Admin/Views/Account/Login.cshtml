
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}
@*<link rel="stylesheet" href="~/css/admin/login.css" />*@
<link href="~/lib/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
@*<link rel="stylesheet" href="~/css/admin/custom.css">*@
@*<link rel="stylesheet" href="~/css/site.css?v=Bd0nu7Nxv_TEVRF6jYIPSlomcUkk80RNMVX2G7c7ohw">*@
@*<link rel="stylesheet" href="~/css/bootstrap-3.3.7.min.css" />*@
<link href="~/css/admin/site/login.css" rel="stylesheet" />
<link href="~/lib/assets/global/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link rel="shortcut icon" href="~/swork.ico" />
<div class="wapter col-md-12" style="padding-top: 100px;">
    <div class="col-md-4 text-right" style="padding-top: 35px;padding-bottom: 35px;">
        <a href="https://itunes.apple.com/us/app/warehouse-system/id1290213064?ls=1&mt=8"><img class="ui_applestore" src="/images/logo/appstore.png"></a>
    </div>
    <div id="login_panel" class="login_panel col-md-4" role="form" style="display: block;">
        <div class="login_inner_container" role="main">
            <div id="true_inner" class="inner_container cred">
                <div class="text-center">

                    <img src="~/images/logo/swork.png" class="img-thumbnail logo_swork"></>
                </div>
                <section>
                    <form asp-controller="Admin/Account" asp-action="Login" asp-route-returnurl="@ViewData["returnUrl"]" method="post" class="form-horizontal">
                        @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
                        {
                            <div asp-validation-summary="All" class="text-danger alert alert-danger" style="color: red !important;"></div>
                        }
                        <div class="form-group">
                            <div class="col-md-12">
                                <i class="fa fa-user icon"></i>
                                <input asp-for="Username" placeholder="Tài khoản" class="form-control login_textfield" autocomplete="off" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <i class="fa fa-lock icon"></i>
                                <input asp-for="Password" placeholder="Mật khẩu" class="form-control login_textfield" autocomplete="off" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 text-center">
                                <div class="checkbox-default">
                                    <input id="checkbox5" type="checkbox">
                                    <label for="checkbox5">
                                        Nhớ mật khẩu
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 text-center" style="padding-top:2px;">
                                <a href="javascript:;" id="forget-password" class="forget-password">Quên mật khẩu ?</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-6">
                                <button style="margin-bottom:40px" type="submit" class="btn btn-login ">Đăng nhập</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-4" style="padding-top: 35px;">
        <a href="https://play.google.com/store/apps/details?id=com.iii.romooc_tracking"><img class="ui_chplay" src="/images/logo/googleplay.png"></a>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
